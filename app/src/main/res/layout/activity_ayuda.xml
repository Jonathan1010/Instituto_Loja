<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#fff"
    tools:context=".Ayuda">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:src="@drawable/logo_istloja"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="625dp"
            android:layout_marginTop="15dp"
            android:background="#77B9D2F1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:lineSpacingExtra="8sp"
                    android:padding="15dp"
                    android:text="Bienvenido a la aplicación móvil del instituto superior tecnológico Loja, en esta aplicación podrás encontrar todos los temas relacionados con la institución.
Además, esta aplicación tiene botón el cual redirecciona a una ventana donde se podrá visualizar una sección de realidad aumentada, el cual está enfocada en ayudar al usuario a conocer más el instituto.
"
                    android:textColor="#000"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:text="¿Como utilizar la seccion de realidad aumenta?"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:src="@drawable/ayudaimagen" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8sp"
                    android:padding="10dp"
                    android:text="En esta parte de la aplicación cuando hacemos click en el botón de cámara, nos habilitara junto con la herramienta de wikitude la cámara la cual escanea una imagen y se puede observar el significado de la misma."
                    android:textColor="#000"></TextView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/volverayuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:padding="10dp"
            android:background="@drawable/ovalomarino"
            android:textColor="#000"
            android:layout_margin="2dp"
            android:textSize="16dp"/>
    </LinearLayout>


</LinearLayout>